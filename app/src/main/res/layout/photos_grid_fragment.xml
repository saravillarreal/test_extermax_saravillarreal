<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/gray_backgroud"

        >
        <RelativeLayout
            android:id="@+id/spinner_choose_center_container"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@drawable/background_rounded_grey">

            <EditText
                android:id="@+id/edit_text_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:hint="Search"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:gravity="left|center"
                android:layout_toRightOf="@+id/icon_search"
                android:background="@drawable/background_rounded_grey" />

            <ImageView
                android:id="@+id/icon_search"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="1dp"
                android:src="@drawable/search_icon"/>

        </RelativeLayout>



        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridView1"
            android:columnWidth="150dip"
            android:gravity="center"
            android:horizontalSpacing="5dip"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="50dip">

        </GridView>







    </LinearLayout>

</layout>